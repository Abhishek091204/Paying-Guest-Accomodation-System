<% layout("/layouts/boilerplate")-%>

<body>
    <div class="container mt-5">
        <h3 class="mb-4">Listing Details</h3>
        <div class="card">
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <strong>Title:</strong> <%=listing.title%>
                    </li>
                    <li class="list-group-item">
                        <strong>Description:</strong> <%=listing.description%>
                    </li>
                    <li class="list-group-item">
                        <strong>Image:</strong>
                        <img src="<%= listing.image.url %>" alt="Listing Image" class="img-fluid rounded mt-2" style="max-width: 300px;">
                    </li>
                    <li class="list-group-item">
                        <strong>Price:</strong> â‚¹<%= listing.price.toLocaleString("en-IN") %>
                    </li>
                    <li class="list-group-item">
                        <strong>Location:</strong> <%=listing.location%>
                    </li>
                    <li class="list-group-item">
                        <strong>Country:</strong> <%=listing.country%>
                    </li>
                </ul>
            </div>
        </div>

        <div class="mt-3">
            <a href="/listings/<%=listing._id%>/edit" class="btn btn-primary me-2">Edit this listing</a>
            <form method="post" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline">
                <button class="btn btn-danger">DELETE</button>
            </form>
        </div>
    </div>

    <!-- Bootstrap CSS (should be in your boilerplate or head section) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Optional: Bootstrap JS (if you need interactive components) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>